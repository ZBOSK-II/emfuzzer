{
  "target": {
    "host": "127.0.0.1",
    "port": 5683
  },
  "case": {
    "delays": {
      "between_cases": 0.2,
      "before_sending": 1
    },
    "setups": [
      {
        "type": "subprocess",
        "name": "reset",
        "args": {
          "cmd": [
            "coap-client-notls",
            "coap://192.168.143.75/reset"
          ],
          "finish": {
            "timeout": 3,
            "signal": "NONE"
          },
          "shell": false
        }
      },
      {
        "type": "ping_alive",
        "name": "ping",
        "args": {
          "host": "127.0.0.1",
          "timeout": 10,
          "interval": 1
        }
      }
    ],
    "monitoring": [],
    "checks": [
      {
        "type": "ping_stable",
        "name": "ping",
        "args": {
          "host": "127.0.0.1",
          "count": 2,
          "interval": 1
        }
      }
    ]
  },
  "coapp": {
    "validator": {
      "timeout": 5
    }
  }
}
