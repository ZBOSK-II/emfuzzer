{
  "target": {
    "host": "127.0.0.1",
    "port": 5683
  },
  "case": {
    "delay": 0.2,
    "setups": [
      {
        "type": "subprocess",
        "name": "reset",
        "args": {
          "cmd": [
            "coapp",
            "coap://192.168.143.75/reset"
          ],
          "timeout": 3,
          "shell": false
        }
      },
      {
        "type": "ping_alive",
        "name": "ping",
        "args": {
          "host": "127.0.0.1",
          "count": 10,
          "interval": 1
        }
      }
    ],
    "checks": [
      {
        "type": "ping_stable",
        "name": "ping",
        "args": {
          "host": "127.0.0.1",
          "count": 2,
          "interval": 1
        }
      }
    ]
  },
  "coapp": {
    "validator": {
      "timeout": 5
    }
  }
}
